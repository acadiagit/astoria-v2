# Astoria v2 — Environment Variables
# Copy this file to .env and fill in your values.
# NEVER commit the .env file to git.

# ── Application ──────────────────────────────────────────
ENVIRONMENT=development          # "development" | "production"
DEBUG=true                        # Enables /api/docs and verbose logging

# ── Supabase ─────────────────────────────────────────────
# From your Supabase project: Settings → API
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_ANON_KEY=eyJ...         # "anon" / "public" key
SUPABASE_SERVICE_ROLE_KEY=eyJ...  # "service_role" key (keep secret!)
SUPABASE_JWT_SECRET=your-jwt-secret  # Settings → API → JWT Secret

# ── LLM API Keys ────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...      # https://console.anthropic.com
GOOGLE_API_KEY=AIza...            # https://aistudio.google.com/apikey
GROQ_API_KEY=gsk_...              # https://console.groq.com

# ── LLM Model Selection ─────────────────────────────────
LLM_SQL_MODEL=gemini-2.0-flash
LLM_RESEARCH_MODEL=claude-sonnet-4-20250514
LLM_NARRATIVE_MODEL=llama-3.3-70b-versatile

# ── Embedding ────────────────────────────────────────────
EMBEDDING_MODEL=intfloat/e5-large-v2
EMBEDDING_DIMENSION=1024

# ── CORS (production: set to your domain) ────────────────
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# ── Frontend (Vite uses VITE_ prefix) ───────────────────
VITE_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
VITE_SUPABASE_ANON_KEY=eyJ...    # Same as SUPABASE_ANON_KEY above
